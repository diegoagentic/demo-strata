{
  "name": "strata-design-system",
  "version": "0.0.1",
  "description": "Strata Design System - Catalyst-based component library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tokens": {
      "types": "./dist/tokens.d.ts",
      "import": "./dist/tokens.js",
      "require": "./dist/tokens.cjs"
    },
    "./styles": "./dist/strata-ds-whitelabel.css",
    "./styles/tokens": "./dist/styles/tokens/variables.css",
    "./styles/tokens-dark": "./dist/styles/tokens/variables-dark.css"
  },
  "files": [
    "dist",
    "README.md",
    "COMPONENT_GUIDE.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "validate:tokens": "node scripts/validate-tokens.mjs",
    "build:tokens": "node scripts/validate-tokens.mjs && node build-tokens.mjs",
    "build:lib": "npm run build:tokens && vite build --config vite.config.lib.ts",
    "prepublishOnly": "npm run build:lib",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "design-system",
    "react",
    "catalyst",
    "tailwind",
    "tokens"
  ],
  "author": "Strata Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.29.2",
    "lucide-react": "^0.562.0",
    "react-hook-form": "^7.71.1",
    "recharts": "^3.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.15",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "4.1.12",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "4.7.0",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "lightningcss": "^1.31.1",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "storybook": "^8.6.14",
    "tailwindcss": "4.1.12",
    "typescript": "^5.0.0",
    "vite": "6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "sideEffects": [
    "**/*.css"
  ]
}
